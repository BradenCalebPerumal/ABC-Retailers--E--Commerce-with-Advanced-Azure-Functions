@model ClientOrdersViewModel

@{
    ViewData["Title"] = "Orders for Client";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .table {
        margin-top: 20px;
    }

        .table thead th {
            background-color: darkturquoise; /* Header background color */
            color: black; /* Header text color */
        }

    .order-header {
        background-color: #e0f7fa; /* Light background for order rows */
        font-weight: bold;
    }

    .product-row {
        background-color: #f8f9fa; /* Subtle background for product rows */
    }

    .order-no-header {
        font-size: 0.9rem; /* Smaller font size specifically for Order N.O */
    }

    h2 {
        color: #1a1a1a; /* Heading color */
        text-shadow: 0 0 5px #00ffcc; /* Glowing effect for heading */
        margin-bottom: 20px; /* Space below heading */
        font-size: 30px;
    }
</style>

<h2>Orders for Client: @Model.ClientId</h2>

@if (Model.Orders.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="order-no-header">Order N.O</th> <!-- Smaller font size for Order N.O header -->
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr class="order-header">
                        <td>@order.OrderId</td>
                        <td colspan="3">Order Summary</td> <!-- Spacer for clarity -->
                    </tr>
                    @foreach (var product in order.Products)
                    {
                        <tr class="product-row">
                            <td></td> <!-- Empty cell for alignment -->
                            <td>@product.Name</td>
                            <td>@product.Quantity</td>
                            <td>@String.Format("{0:C}", product.TotalPrice)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="alert alert-warning">No orders found for this client.</p>
}
