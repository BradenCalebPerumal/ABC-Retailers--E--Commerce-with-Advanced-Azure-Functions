@model IEnumerable<CLDV6211_ST10287165_POE_P1.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .table {
        margin-top: 20px;
    }

        .table thead th {
            background-color: darkturquoise; /* Header background color */
            color: black; /* Header text color */
        }

    .order-row {
        background-color: #e0f7fa; /* Light background for order rows */
    }

    .order-status {
        font-weight: bold; /* Bold text for status */
    }

    .order-number-header {
        font-size: 0.9rem; /* Smaller font size specifically for Order Number */
    }

    h2 {
        color: #1a1a1a; /* Heading color */
        text-shadow: 0 0 5px #00ffcc; /* Glowing effect for heading */
        margin-bottom: 20px; /* Space below heading */
        font-size: 30px; /* Larger heading font size */
    }
</style>

<h2>All Orders</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="order-number-header">Order N.O</th> <!-- Smaller font size for Order Number -->
                    <th>Customer Email</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr class="order-row">
                        <td>@order.RowKey</td>
                        <td>@order.CustEmail</td> <!-- Directly display the email from the Order model -->
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td class="order-status">@order.OrderStatus</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="alert alert-warning">No orders found.</p>
}
