@model CLDV6211_ST10287165_POE_P1.Models.Admin

@{
    ViewData["Title"] = "Admin Details";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #f4f4f4; /* Light background */
            color: #333;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #0056b3; /* Dark blue */
            color: #fff;
            padding: 15px 20px;
            text-align: center;
            font-size: 24px;
            border-radius: 8px;
            margin-bottom: 20px;
            color: white; /* Heading color */
            text-shadow: 0 0 5px #00ffcc; /* Glowing effect for heading */
        }

        .container {
            max-width: 900px;
            margin: auto;
            padding: 20px;
            background-color: #ffffff; /* White background for the content area */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            margin: 20px 0;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: darkturquoise; /* Turquoise for headers */
            color: black;
        
            text-shadow: 0 0 5px #00ffcc; /* Glowing effect for heading */
        }

        tr:hover {
            background-color: #f5f5f5; /* Light hover effect */
            color: black;
        }

        .button {
            background-color: #00ced1; /* Turquoise */
            color: white;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .button:hover {
                background-color: #008b8b; /* Darker turquoise */
                color:black;
            }

        .footer {
            text-align: center;
            padding: 10px 20px;
            background-color: #0056b3; /* Consistent dark blue */
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .action-links a {
            margin: 0 5px;
        }

        .action-links .button {
            margin-right: 10px;
        }

        .add-admin-button {
            text-align: right;
            margin-top: 20px;
        }

            .add-admin-button .button {
                font-weight: bold;
                background-color: #6c7ae0; /* Light blue button */
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
            }

                .add-admin-button .button:hover {
                    background-color: #5a62cc; /* Slightly darker on hover */
                }
    </style>
</head>
<body>
    <div class="header">Admin Profile</div>

    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Admin Username</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.AdminEmail)</td>
                    <td>@Html.DisplayFor(model => model.AdminPassword)</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@Model.RowKey" class="button">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.RowKey" class="button">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="add-admin-button">
            <a asp-action="NewAdmin" class="button">Add Admin</a>
        </div>
    </div>

    
</body>
</html>
