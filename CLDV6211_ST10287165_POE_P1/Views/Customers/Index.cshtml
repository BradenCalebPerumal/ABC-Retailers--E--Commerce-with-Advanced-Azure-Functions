@model IEnumerable<CLDV6211_ST10287165_POE_P1.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .table {
        margin-top: 20px;
    }

        .table thead th {
            background-color: darkturquoise; /* Header background color */
            color: black; /* Header text color */
        }

        .table tbody tr:hover {
            background-color: #f0f8ff; /* Light highlight on hover */
        }

    .btn-link {
        color: #0056b3; /* Dark blue */
        text-decoration: none;
        font-weight: bold;
        margin-right: 10px;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    h1 {
        color: #1a1a1a; /* Heading color */
        text-shadow: 0 0 5px #00ffcc; /* Glowing effect for heading */
        margin-bottom: 20px; /* Space below heading */
        font-size: 30px; /* Larger heading font size */
    }

    .create-link {
        color: #00ced1; /* Turquoise */
        font-weight: bold;
        text-decoration: none;
        margin-bottom: 15px;
        display: inline-block;
    }

        .create-link:hover {
            text-decoration: underline;
        }
</style>

<h1>Customer Emails and Passwords</h1>

<p>
    <a asp-action="Create" class="create-link">Click Here To Add A New Customer</a>
</p>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Customer Email</th> <!-- Updated heading -->
                <th>Password</th> <!-- Updated heading -->
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustPassword)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RowKey" class="btn-link">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.RowKey" class="btn-link">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
