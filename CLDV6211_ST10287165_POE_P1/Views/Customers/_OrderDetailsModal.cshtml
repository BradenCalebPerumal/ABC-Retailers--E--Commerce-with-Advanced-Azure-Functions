@model CLDV6211_ST10287165_POE_P1.Models.OrderHistoryViewModel

<div class="modal-header">
    <h5 class="modal-title">Order No: @Model.Order.RowKey</h5>

   
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@String.Format("{0:C}", item.Price)</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <strong>Grand Total: @String.Format("{0:C}", Model.Order.TotalAmount)</strong>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
