@model CLDV6211_ST10287165_POE_P1.Models.OrderDetail

@{
    ViewData["Title"] = "Delete Order Detail";
}

<h1>Delete Order Detail</h1>

<h3>Are you sure you want to delete this order detail?</h3>
<div>
    <h4>Order Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:C}", @Model.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-orderId="@Model.PartitionKey">Back to List</a>
    </form>
</div>
