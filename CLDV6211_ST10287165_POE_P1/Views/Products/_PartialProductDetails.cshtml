@model CLDV6211_ST10287165_POE_P1.Models.Product

<div class="product-details">
    <h3>@Model.Name</h3>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> @String.Format("{0:C}", Model.Price)</p>
    <p><strong>Category:</strong> @Model.Category</p>
    <p><strong>Stock Availability:</strong> @Model.InStock</p>
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Product Image" style="max-width:100%; height:auto;" />
    }
</div>
